.recommend-recource-container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.mask {
  z-index: 999;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.24);
}

.resource-box {
  position: relative;
  width: 100%;
  height: 490rpx;
}

.resource-bg {
  width: 100%;
}

.resource-content {
  z-index: 1;
  position: absolute;
  left: 10rpx;
  top: 346rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 30rpx 45rpx;
  width: 730rpx;
  height: 140rpx;
  box-shadow: 0 3rpx 15rpx rgba(0, 0, 0, 0.24);
  line-height: 28rpx;
  background-color: #fff;
}

.resource-content text {
  font-size: 24rpx;
}

.comment-list {
  position: relative;
  box-sizing: border-box;
  padding-top: 29rpx;
  padding-left: 30rpx;
  width: 100%;
  height: 156rpx;
}

.comment-list image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment-username {
  position: absolute;
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  top: 30rpx;
  left: 160rpx;
}

.comment-time {
  position: absolute;
  font-size: 20rpx;
  color: #666;
  font-weight: bold;
  top: 33rpx;
  right: 31rpx;
}

.comment-text {
  position: absolute;
  bottom: 40rpx;
  left: 160rpx;
  font-size: 22rpx;
  color: #666;
}

.comment-praise {
  position: absolute;
  bottom: 40rpx;
  right: 88rpx;
  width: 60rpx;
  line-height: 30rpx;
}

.comment-praise image {
  float: left;
  /* margin-top: 3rpx; */
  width: 30rpx;
  height: 30rpx;
}

.comment-praise text {
  float: left;
  margin-left: 5rpx;
  font-size: 20rpx;
  color: #666;
}

.report-button {
  position: absolute;
  bottom: 40rpx;
  right: 32rpx;
}

.report-button image {
  display: block;
  width: 30rpx;
}

.line {
  position: absolute;
  width: 590rpx;
  height: 1px;
  background-color: #c89ff1;
  top: 0;
  left: 160rpx;
  opacity: 0.5;
}

.none {
  display: none;
}

.comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 20rpx;
  z-index: 1000;
  box-sizing: border-box;
  padding: 0 25rpx;
  width: 100%;
}

.do-comment {
  display: block;

  z-index: 1000;
  
  border: #6d19a7 3rpx solid;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 15rpx 10rpx;
  width: 75%;
  min-height: 60rpx;

  font-size: 26rpx;
  background-color: #fff;
}

.do-comment textarea {
  width: 100%;
  text-align: justify;
  max-height: 150rpx;
}

.comment-send-btn {
  z-index: 1000;
  width: 15%;
}

.comment-send-btn {
  text-align: center;
  color: #fff;
  width: 10%;
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.btn-disable {
  background-color: #dddee2;
}

.btn-active {
  background-color: #6f564b;
}
