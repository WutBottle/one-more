/* pages/echarts/echarts.wxss */
.test-result-wrapper{
  padding: 50rpx 40rpx 80rpx 40rpx;
}


ec-canvas {
  width: 100%;
  height: 100%;
}

.echarts-container {
  width: 100%;
  height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.read-result-btn{
  text-align: center;
  color: #188df0;
  font-size: 40rpx;
  border-radius: 20rpx;
  border: 4rpx #188df0 solid;
  padding: 30rpx 40rpx;
  margin: 0 auto;
  font-weight: bold;
  width: 50vw;
}

.result-wrapper{
  font-size: 34rpx;
  line-height: 34rpx;
}

.personality-type{
  color: #188df0;
}

.analysis-item{
  display: flex;
  align-items: center;
  text-align: justify;
  padding: 30rpx 0;
}

.analysis-item::before{
  content: "";   
  display: inline-block;   
  width: 20rpx;
  height: 34rpx;
  margin-right: 10rpx;
  background-color: #188df0;
}

.back-to-list{
  color: #ffffff;
  background-color: rgba(242, 56, 48, 0.7);
  border-radius: 20rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx;
  display: inline-block;
  position: fixed;
  z-index: 100;
  bottom: 12vh;
  right: 10vw;
}