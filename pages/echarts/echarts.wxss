/* pages/echarts/echarts.wxss */
.test-result-wrapper{
  padding: 50rpx 40rpx 80rpx 40rpx;
}


ec-canvas {
  width: 100%;
  height: 100%;
}

.echarts-container {
  width: 100%;
  height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.read-result-btn{
  text-align: center;
  color: #188df0;
  font-size: 40rpx;
  border-radius: 20rpx;
  border: 4rpx #188df0 solid;
  padding: 30rpx 40rpx;
  margin: 0 auto;
  font-weight: bold;
  width: 50vw;
}

.result-wrapper{
  font-size: 34rpx;
  line-height: 34rpx;
}

.personality-type{
  color: #188df0;
}

.analysis-item{
  display: flex;
  align-items: center;
  text-align: justify;
  padding: 30rpx 0;
}

.analysis-item::before{
  content: "";   
  display: inline-block;   
  width: 20rpx;
  height: 34rpx;
  margin-right: 10rpx;
  background-color: #188df0;
}

.back-to-list{
  color: #ffffff;
  background-color: rgba(242, 56, 48, 0.7);
  border-radius: 20rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx;
  display: inline-block;
  position: fixed;
  z-index: 100;
  bottom: 14vh;
  right: 10vw;
}

.find-similar-partner{
  text-align: center;
  box-sizing: border-box;
  background: linear-gradient(to bottom right, rgb(24, 141, 240), rgb(12, 248, 231));
  font-size: 36rpx;
  color: #fff;
  border-radius: 15rpx;
  padding: 20rpx 0;
  margin-top: 40rpx;
}

.show-similar-wrapper{
  position: fixed;
  width: 100vw;
  height: 100vh;
  right: 0;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 99999;
  background: rgba(95, 95, 95, 0.6);
}

.similar-user-wrapper{
  width: 640rpx;
  height: 550rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 250rpx;
  overflow: hidden;
  position: relative;
}

.similar-user-avatar{
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  border-radius: 50%;
  border: 8rpx #fff solid;
  position: relative;
  bottom: -150rpx;
}

.similar-user-gender{
  width: 40rpx;
  height: 35rpx;
}

.similar-user-info{
  padding: 60rpx 0 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.similar-user-name{
  font-size: 40rpx;
}

.similar-user-intro{
  width: 400rpx;
  margin: 0 auto;
  text-align: center;
  color: #188df0;
  font-size: 30rpx;
}

.make-friends-btn{
  padding: 20rpx 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #fff;
  background-color: rgb(248, 141, 0);
}

.make-friends-btn>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}