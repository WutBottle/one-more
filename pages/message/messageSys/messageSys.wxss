/* pages/message/messageSys/messageSys.wxss */
.sys-content-container{
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #9140e4;
  margin-left: 20rpx;
  position: relative;
}

.sys-content-container image {
  display: inline-block;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
}

.sys-info{
  display: inline-block;
  margin-left: 20rpx;
  vertical-align: middle;
  line-height: 48rpx;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}

.sys-time{
  padding-right: 20rpx;
  line-height: 42rpx;
  font-size: 22rpx;
  text-align: right;
  color: #666666;
  font-weight: bold;
}

