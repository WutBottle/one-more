/* pages/message/message.wxss */
.message-container{
  padding: 0 30rpx;
  border-top: 1rpx solid #999999;
}

.message-container image{
  width: 65rpx;
}

.sys-message,.private-message,.comment-message{
  height: 170rpx;
  border-radius: 10rpx;
  background-color: #9140e4;
  padding: 0 40rpx;
  color: #fff;
  font-size: 40rpx;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}