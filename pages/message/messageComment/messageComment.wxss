/* pages/message/messageComment/messageComment.wxss */
.comment-message-container {
  height: 100vh;
}

.tablist {
  display: flex;
  height: 100rpx;
  
}

.tablist .item {
  flex: auto;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #6d1aa7;
}

.tablist .item.select::after {
  margin: 0 auto;
  content: "";
  width: 110rpx;
  height: 3rpx;
  display: block;
  position: absolute;
  left: 0;
  bottom: 20rpx;
  right: 0;
  background: #6d1aa7;
}

.out {
  flex: auto;
  height: 100vh;  
}

.comment-container {
  height: 100%;
}

.comment-msg-list {
  width: 100%;
  height: 100rpx;
  padding: 30rpx 40rpx 30rpx 26rpx;
  position: relative;
}

.comment-msg-list image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment-msg-username{
  position: absolute;
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  top: 30rpx;
  left: 160rpx;
}

.comment-msg-time{
  position: absolute;
  font-size: 20rpx;
  color: #666666;
  font-weight: bold;
  top: 40rpx;
  right: 100rpx;
}

.comment-msg-latestMsg{
  position: absolute;
  font-size: 20rpx;
  color: #666666;
  font-weight: bold;
  top: 100rpx;
  left: 160rpx;
}

.comment-msg-noRead {
  text-align: center;
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: #ff0000;
  border-radius: 50%;
  top: 100rpx;
  right: 100rpx;
}

.line {
  position: absolute;
  width: 590rpx;
  height: 1px;
  background-color: #c89ff1;
  bottom: 0;
  left: 160rpx;
}
