/* pages/message/messageComment/messageComment.wxss */
.comment-message-container {
  position: relative;
  height: 100vh;
}

.tablist {
  z-index: 1;
  position: fixed;
  top: 0;
  display: flex;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}

.tablist .item {
  flex: auto;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #6d1aa7;
}

.tablist .item.select::after {
  margin: 0 auto;
  content: "";
  width: 110rpx;
  height: 3rpx;
  display: block;
  position: absolute;
  left: 0;
  bottom: 20rpx;
  right: 0;
  background: #6d1aa7;
}

.unread-tip {
  z-index: 999;
  position: absolute;
  top: 0;
  border-radius: 50%;
  right: 100rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #ff0000;
  font-size: 22rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
}

.out {
  margin-top: 100rpx;
  flex: auto;
  height: 100vh;
  background-color: #ececec;  
}

.comment-container {
  height: 100%;
}

.comment-msg-list {
  margin-top: 30rpx;
  width: 100%;
  height: 304rpx;
  padding: 30rpx 40rpx 30rpx 26rpx;
  position: relative;
  background-color: #fff;
}

.comment-msg-list > image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.comment-msg-username{
  position: absolute;
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  top: 30rpx;
  left: 160rpx;
}

.comment-msg-time{
  position: absolute;
  font-size: 20rpx;
  color: #777;
  font-weight: bold;
  top: 80rpx;
  left: 160rpx;
}

.comment-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  bottom: 30rpx;
  width: 100%;
  height: 150rpx;
  background-color: #f8f8f8;
}

.comment-content image{
  width: 150rpx;
}

.comment-msg-latestMsg{
  margin-left: 30rpx;
  font-size: 22rpx;
  color: #000;
  font-weight: bold;
}

.comment-msg-latestMsg text {
  color: #666;
}

.comment-msg-noRead {
  text-align: center;
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: #ff0000;
  border-radius: 50%;
  top: 80rpx;
  right: 100rpx;
}

.goto-btn {
  position: absolute;
  top: 30rpx;
  right: 100rpx;
  font-size: 22rpx;
  color: #333;
}

