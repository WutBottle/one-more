/* pages/message/messagePrivate/messagePrivate.wxss */

.whiteBG{
  background-color: #ffffff;
}

.purpleShallowBG{
  background-color: #c89ff1;
}

.private-message-container{
  border-top: 1rpx solid #999999;
}

.private-msg-list{
  height: 100rpx;
  padding: 30rpx 40rpx 30rpx 26rpx;
  position: relative;
}

.private-msg-list image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.private-msg-username{
  position: absolute;
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  top: 30rpx;
  left: 160rpx;
}

.private-msg-time{
  position: absolute;
  font-size: 20rpx;
  color: #666666;
  font-weight: bold;
  top: 40rpx;
  right: 40rpx;
}

.private-msg-latestMsg{
  position: absolute;
  font-size: 20rpx;
  color: #666666;
  font-weight: bold;
  top: 100rpx;
  left: 160rpx;
}

.private-msg-noReadMsgNum{
  text-align: center;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  color: #666666;
  font-weight: bold;
  background-color: #ffff00;
  border-radius: 50%;
  top: 100rpx;
  right: 40rpx;
}