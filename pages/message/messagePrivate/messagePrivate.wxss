/* pages/message/messagePrivate/messagePrivate.wxss */

.whiteBG{
  background-color: #ffffff;
}

.purpleShallowBG{
  background-color: #c89ff1;
}

.private-msg-list{
  height: 100rpx;
  padding: 30rpx 40rpx 30rpx 26rpx;
  position: relative;
}

.private-msg-list image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.private-msg-username{
  position: absolute;
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  top: 30rpx;
  left: 160rpx;
}

.private-msg-time{
  position: absolute;
  font-size: 20rpx;
  color: #666666;
  font-weight: bold;
  top: 40rpx;
  right: 40rpx;
}

.private-msg-latestMsg{
  position: absolute;
  font-size: 20rpx;
  color: #666666;
  font-weight: bold;
  top: 100rpx;
  left: 160rpx;
}

.private-msg-noReadMsgNum{
  text-align: center;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  color: #666666;
  font-weight: bold;
  background-color: #ffff00;
  border-radius: 50%;
  top: 100rpx;
  right: 40rpx;
}

.dialog-pop-container{
  position: fixed;
  width: 100vw;
  height: 100vh;
  right: 0;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 99999;
  background: rgba(95, 95, 95, 0.6);
}

.user-dialog-div{
  width: 710rpx;
  background-color: #f1eeed;
  border-radius: 15rpx;
  margin: 0 auto;
  margin-top: 160rpx;
}

.user-dialog-name{
  position: relative;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  padding: 40rpx 0 20rpx 0;
  border-bottom: 1rpx solid #666666;
}

.dialog-scrollY{
  height: 600rpx;
  overflow:hidden;
  white-space:nowrap;
}

.dialog-time{
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  padding: 10rpx 0;
}

.left-dialog-container,.right-dialog-container{
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}


.right-dialog-container{
  justify-content: flex-end;
}

.left-dialog-container{
  justify-content: flex-start;
}

.left-dialog-container>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.right-dialog-container>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

.dialog-content{
  text-align: justify;
  font-size: 24rpx;
  max-width: 400rpx;
  display:inline-block;
  white-space: pre-line;
  color: #666666;
}

.dialog-send-msg{
  padding: 25rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.dialog-msg-input{
  display: inline-block;
  width: 75%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 15rpx 10rpx;
}

.dialog-msg-input>textarea{
  width: 100%;
  text-align: justify;
  max-height: 150rpx;
}

.dialog-send-btn{
  width: 15%;
}

.dialog-send-btn{
  text-align: center;
  display: inline-block;
  color: #fff;
  width: 10%;
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.btn-disable{
  background-color: #dddee2;
}

.btn-active{
  background-color: #6f564b;
}

.dialog-send-btn:active{
  background-color: #41322c;
}