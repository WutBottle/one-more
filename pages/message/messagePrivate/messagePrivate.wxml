<!--pages/message/messagePrivate/messagePrivate.wxml-->

<view class='private-message-container'>
  <view class="private-msg-list {{index%2 === 0 ? 'purpleShallowBG' : 'whiteBG'}}" wx:for="{{privateMessage}}" bindtap='showDialogModal' data-id="{{item.userId}}" wx:key="{{index}}">
    <image data-id="{{item.userId}}" src='{{item.avatarUrl}}' mode='aspectFit'></image>
    <view data-id="{{item.userId}}" class='private-msg-username displayInlineBlock'>{{item.username}}</view>
    <view data-id="{{item.userId}}" class='private-msg-time displayInlineBlock'>{{item.time}}</view>
    <view data-id="{{item.userId}}" class='private-msg-latestMsg displayInlineBlock'>{{item.latestMsg}}</view>
    <view data-id="{{item.userId}}" class='private-msg-noReadMsgNum displayInlineBlock' wx:if="{{!!item.noReadMsgNum}}">{{item.noReadMsgNum}}</view>
  </view>
</view>

<view class='dialog-pop-container' wx:if="{{}}">

</view>