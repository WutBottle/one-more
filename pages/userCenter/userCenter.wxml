<!--pages/userCenter/userCenter.wxml-->
<view class='user-container' style='background-image:url("../../images/bk-个人中心.png");background-size:100%;'>
  <view class='container-head'>
    <!-- 用户信息部分 -->
    <view class='user-img'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='user-info'>
      <view class='user-id'>
        <open-data type="userNickName" lang="zh_CN"></open-data>
      </view>
      <view class='user-basic-info'>
        <text>基本信息</text>
      </view>
    </view>
    <navigator url='#' class="more-detail">
      <image class src='../../images/arrow-right.png' mode='aspectFit'></image>
    </navigator>
  </view>
  <view class='container-body'>
    <navigator class='function' url='#'>
      <view class='function-item bookshelves'>
        <image src='../../images/logo_书架.png'></image>
        <text>我的书架</text>
      </view>
    </navigator>
    <navigator class='function' url='#'>
      <view class='function-item bookshelves'>
        <image src='../../images/logo_朋友.png'></image>
        <text>我的朋友</text>
      </view>
    </navigator>
    <navigator class='function' url='#'>
      <view class='function-item bookshelves'>
        <image src='../../images/logo_历史记录.png'></image>
        <text>历史记录</text>
      </view>
    </navigator>
    <navigator class='function' url='#'>
      <view class='function-item bookshelves'>
        <image src='../../images/logo_趣味测试.png'></image>
        <text>趣味测试</text>
      </view>
    </navigator>
    <navigator class='function' url='#'>
      <view class='function-item bookshelves'>
        <image src='../../images/logo_意见反馈.png'></image>
        <text>意见反馈</text>
      </view>
    </navigator>
    <navigator class='function' url='#'>
      <view class='function-item bookshelves'>
        <image src='../../images/logo_设置.png'></image>
        <text>设置</text>
      </view>
    </navigator>
  </view>
</view>