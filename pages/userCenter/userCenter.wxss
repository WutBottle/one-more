/* pages/userCenter/userCenter.wxss */
.user-container {
  position: relative;
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.user-bk {
  z-index: -1;
  position: absolute;
  width: 100%;
}

.container-head {
  display: flex;
  flex-direction: row;
  align-items:center;
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 300rpx;
}

.user-img {
  overflow: hidden;
  
  margin-left: 80rpx;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
}

.user-info {
  margin-left: 20px;
}

.user-id {
  font-size: 40rpx;
  color: #fff;
}

.user-basic-info {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #fff;
}

.user-basic-info text{
  margin-right: 10rpx;
}

.more-detail {
  position: absolute;
  top: 120rpx;
  right: 80rpx;
  width: 34rpx;
  height: 60rpx;
}

.container-body {
  display: flex;
  flex-direction: column;

  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;
  height: 916rpx;
  background-color: #fff;
}

.function {
  width: 100%;
  height: 153rpx;
}

.function-item {
  float: right;
  padding-top: 50rpx;

  box-sizing: border-box;
  border-bottom: #6d1aa7 1rpx solid;
  width: 670rpx;
  height: 100%;
}

.function-item image {
  float: left;
}

.function-item text {
  margin-left: 50rpx;

  font-size: 28rpx;
  font-family: "FZHTK--GBK1-0";
}
